    <class>cl.duoc.alumnos.ferme.domain.entities.DetalleOrdenCompra</class>
    <class>cl.duoc.alumnos.ferme.domain.entities.TipoProducto</class>
    <class>cl.duoc.alumnos.ferme.domain.entities.Proveedor</class>
    <class>cl.duoc.alumnos.ferme.domain.entities.Venta</class>
    <class>cl.duoc.alumnos.ferme.domain.entities.Producto</class>
